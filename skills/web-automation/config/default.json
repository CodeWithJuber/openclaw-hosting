{
  "name": "web-automation",
  "version": "1.0.0",
  "environment": "development",
  
  "browser": {
    "type": "chromium",
    "headless": true,
    "viewport": {
      "width": 1920,
      "height": 1080
    },
    "timeout": 30000,
    "slowMo": 0
  },

  "stealth": {
    "enabled": true,
    "hideWebDriver": true,
    "spoofPlugins": true,
    "spoofLanguages": true,
    "randomizeCanvas": true
  },

  "retry": {
    "maxAttempts": 3,
    "delay": 2000,
    "backoff": 2,
    "retryableErrors": [
      "TimeoutError",
      "NavigationError",
      "NetworkError"
    ]
  },

  "delay": {
    "min": 1000,
    "max": 3000,
    "enabled": true
  },

  "proxy": {
    "enabled": false,
    "rotation": {
      "strategy": "round-robin",
      "interval": 1
    },
    "healthCheck": {
      "enabled": true,
      "url": "https://httpbin.org/ip",
      "timeout": 30000
    },
    "maxFailures": 3,
    "banDuration": 300000
  },

  "captcha": {
    "enabled": false,
    "service": "capmonster",
    "timeout": 120000,
    "pollingInterval": 5000
  },

  "session": {
    "persistence": true,
    "storagePath": "./sessions",
    "maxAge": 86400000
  },

  "screenshot": {
    "format": "png",
    "quality": 90,
    "fullPage": true
  },

  "pdf": {
    "format": "A4",
    "printBackground": true,
    "margin": {
      "top": "20px",
      "right": "20px",
      "bottom": "20px",
      "left": "20px"
    }
  },

  "logging": {
    "level": "info",
    "format": "simple",
    "destination": "console"
  },

  "rateLimit": {
    "enabled": true,
    "maxRequests": 10,
    "windowMs": 60000
  },

  "security": {
    "respectRobotsTxt": true,
    "followRedirects": true,
    "maxRedirects": 10,
    "allowedProtocols": ["http:", "https:"]
  }
}
